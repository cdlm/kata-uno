#!/usr/bin/env ruby

require 'docopt'

PROGRAM_NAME = File.basename(__FILE__)
USAGE = <<DOCOPT
Check rules of Uno card game.

Usage:
  #{PROGRAM_NAME} [<file>]

-h, --help  Show this message
DOCOPT

begin
  opt = Docopt.docopt(USAGE)

  input = if opt['<file>'].nil?
            $stdin
          else
            File.open opt['<file>'], 'r'
          end
  output = $stdout

  require 'uno'
  require 'uno/game'
  Uno::Checker.new(
    Uno::Game.new,
    input,
    output
  ).check

rescue Docopt::Exit => e
  puts e.message
end
